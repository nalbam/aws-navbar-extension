{
  "name": "AWS Colorful Navbar",
  "description": "Change navbar color and flag according to AWS region",
  "version": "2.0.0",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.console.aws.amazon.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "128": "icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "AWS Colorful Navbar"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.console.aws.amazon.com/*"
      ],
      "js": [
        "colors.js",
        "utils.js",
        "main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "flags/*.png",
    "icons/*.ico"
  ]
}
